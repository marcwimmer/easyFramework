<?xml version="1.0" encoding="utf-8" ?>
<table name="tdAnswers" inserted="ans_inserted" updated="ans_updated" insertedby="ans_insertedby"
	updatedby="ans_updatedby">
	<field primarykey="1">
		<name>ans_id</name>
		<type>int</type>
		<desc>Antwort-ID</desc>
	</field>
	<field>
		<name>ans_html_before</name>
		<type>string</type>
		<size>255</size>
		<desc>HTML (bevor)</desc>
	</field>
	<field>
		<name>ans_freetext_suggestion</name>
		<type>string</type>
		<size>255</size>
		<desc>Freitext Lösungsvorschlag</desc>
	</field>
	<field>
		<name>ans_html_after</name>
		<type>string</type>
		<size>255</size>
		<desc>HTML (danach)</desc>
	</field>
	<field>
	<name>ans_checked</name>	
	<type>boolean</type>
	<desc>markiert</desc>
	</field>
	<field>
		<name>ans_qst_id</name>
		<type>int</type>
		<desc>Frage</desc>
		<rules>
			<mandatory></mandatory>
		</rules>
	</field>
	<field>
		<name>ans_resultDbField</name>
		<type>string</type>
		<desc>Datenbankfeld</desc>
		<size>20</size>
		<rules>
			<maxlen><value>20</value></maxlen>
		</rules>
	</field>
	<field>
		<name>ans_aty_id</name>
		<type>string</type>
		<size>20</size>
		<desc>Antworttyp</desc>
		<rules>
			<mandatory></mandatory>
		</rules>
	</field>
	<field>
		<name>ans_gap_txt</name>
		<type>memo</type>
		<desc>Lückentext</desc>
	</field>
	<field>
		<name>ans_index</name>
		<type>int</type>
		<desc>Sortierindex</desc>
	</field>
	<field>
		<name>ans_multiline</name>
		<type>boolean</type>
		<desc>Mehrzeilig</desc>
	</field>
	<field>
		<name>ans_lines</name>
		<type>int</type>
		<desc>Anzahl Zeilen</desc>
		<rules>
			<numberrange>
				<minvalue>1</minvalue>
			</numberrange>
		</rules>
	</field>
	<field>
		<name>ans_inserted</name>
		<type>date</type>
		<desc>Eingefügt</desc>
	</field>
	<field>
		<name>ans_updated</name>
		<type>date</type>
		<desc>Bearbeitet</desc>
	</field>
	<field>
		<name>ans_insertedBy</name>
		<type>string</type>
		<desc>Eingefügt von</desc>
		<size>255</size>
	</field>
	<field>
		<name>ans_updatedBy</name>
		<type>string</type>
		<desc>Bearbeitet von</desc>
		<size>255</size>
	</field>
</table>
